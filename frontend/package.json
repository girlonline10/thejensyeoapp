// React app package.json
import React, { useState } from 'react';
import InventoryTab from './components/InventoryTab';
import BlendCreator from './components/BlendCreator';
import BlendDatabase from './components/BlendDatabase';
import BarcodeScanner from './components/BarcodeScanner';

function App() {
  const [activeTab, setActiveTab] = useState('inventory');

  return (
    <div className="app-container">
      <h1>Essential Oil Organizer</h1>
      <nav>
        <button onClick={() => setActiveTab('inventory')}>Inventory</button>
        <button onClick={() => setActiveTab('create-blend')}>Create Blend</button>
        <button onClick={() => setActiveTab('blend-db')}>Blend Database</button>
        <button onClick={() => setActiveTab('scan')}>Scan Barcode</button>
      </nav>
      {activeTab === 'inventory' && <InventoryTab />}
      {activeTab === 'create-blend' && <BlendCreator />}
      {activeTab === 'blend-db' && <BlendDatabase />}
      {activeTab === 'scan' && <BarcodeScanner />}
    </div>
  );
}

export default App;

